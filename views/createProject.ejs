<% if(!modal) { %>
<!DOCTYPE html>
<html>
<head>
  <title><%=title%></title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://octicons.github.com/components/octicons/octicons/octicons.css">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
<% include navigation %>
<div class="container">
  <% } %>
      <h4>Describe your project</h4>

      <div class="form-group">
        <label for="projectName">Project Name</label>
        <input type="text" class="form-control" id="projectName" name="projectName" placeholder="Project Name"
               required aria-required="true" autofocus>
      </div>
      <div class="form-group">
        <label for="projectSummary">Summary</label>
        <input type="text" class="form-control" id="projectSummary" name="projectSummary"
               placeholder="Project Summary" required aria-required="true">
      </div>
      <div class="input-group">
        <!--<label for="projectSummary">Project Leader</label>-->
                        <span class="input-group-addon">
                            <input type="checkbox" id="projectLeader" name="projectLeader"
                                   aria-label="Toggle Project Leader" checked>
                         </span>
        <input type="text" class="form-control" id="projectLeaderName" name="projectLeaderName"
               placeholder="Project Leader" aria-label="Project Leader" required>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <button type="submit" class="btn btn-primary">Ship it!</button>
    </div>
  </form>
<% if(!modal) { %>
</div>
<% include footer %>
</body>
</html>
<% } %>
